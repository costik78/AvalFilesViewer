<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import ua.ibis.avalfile.views.CurrencyCellValueFactory?>
<?import ua.ibis.avalfile.views.IndexingCellValueFactory?>
<?import ua.ibis.avalfile.views.MoneyCellFactory?>

<BorderPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.ibis.avalfile.controller.ViewX6Controller">
    <center>
        <TableView fx:id="tableX6" prefHeight="200.0" prefWidth="200.0" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn editable="false" prefWidth="75.0" sortable="false" styleClass="table-cell-right" text="#">
                    <cellValueFactory><IndexingCellValueFactory /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="mfoX6" prefWidth="82.0" styleClass="table-cell-center" text="МФО">
                    <cellValueFactory>
                        <PropertyValueFactory property="mfo" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="accountX6" prefWidth="110.0" text="Счет">
                    <cellValueFactory>
                        <PropertyValueFactory property="account" /> </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="trNumberX6" prefWidth="138.0" text="Номер договора">
                    <cellValueFactory>
                        <PropertyValueFactory property="trNumber" /> </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="currencyX6" prefWidth="55.0" styleClass="table-cell-center" text="Валюта">
                    <cellValueFactory><CurrencyCellValueFactory /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="sumObespX6" prefWidth="75.0" styleClass="table-cell-right" text="Сумма обеспечения">
                    <cellValueFactory>
                        <PropertyValueFactory property="summaObesp" /> </cellValueFactory>
                    <cellFactory><MoneyCellFactory /></cellFactory>
                </TableColumn>
                <TableColumn fx:id="codeObespX6" prefWidth="75.0" styleClass="table-cell-center" text="Вид обеспечения">
                    <cellValueFactory>
                        <PropertyValueFactory property="obesp" /> </cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <Label fx:id="labelX6" BorderPane.alignment="CENTER_RIGHT">
         <BorderPane.margin>
            <Insets left="12.0" right="12.0" />
         </BorderPane.margin></Label>
    </bottom>
</BorderPane>
